{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "es2019"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noEmit": true,
    "types": ["vitest/globals"]
  },
  "include": ["tests"],
  "exclude": [
    "node_modules"
  ]
}
